@model BusDBWebApplication.DataBase.Tickets

@{
    ViewBag.Title = "Удалить билет";
}



<h3>Вы уверены, что вы хотите удалить этот билет?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Номер рейса")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Services.service_number)
        </dd>

        <dt>
            @Html.DisplayName("Пассажир")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Passengers.information)
        </dd>

        <dt>
            @Html.DisplayName("Дата приобретения")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.purchase_date)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
