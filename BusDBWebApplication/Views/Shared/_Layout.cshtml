<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Admin/Index" class="navbar-brand"><img class="nav-img" height="60" src="~/Content/Images/bus.png" /></a>
                <a href="~/Admin/Index" class="navbar-brand">База данных </a> 
            </div>
            <div class="navbar-collapse collapse">
                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <!-- Main -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-3">
                    <!-- Left column -->
                    <a href="#"><strong><i class="glyphicon glyphicon-link"></i> Инструменты</strong></a>

                    <hr>

                    <ul class="nav nav-stacked">
                        <li class="nav-header">
                            <a href="#" data-toggle="collapse" data-target="#userMenu">Таблицы <i class="glyphicon glyphicon-chevron-down"></i></a>
                            <ul class="nav nav-stacked collapse in" id="userMenu">
                                <li class="active"> <a href="~/Cities/Index"><i class="glyphicon glyphicon-home"></i> Города</a></li>
                                <li><a href="~/Buses/Index"><i class="glyphicon glyphicon-envelope"></i> Автобусы </a></li>
                                <li><a href="~/Passengers/Index"><i class="glyphicon glyphicon-cog"></i> Пассажиры</a></li>
                                <li><a href="~/Tickets/Index"><i class="glyphicon glyphicon-comment"></i> Билеты</a></li>
                                <li><a href="~/Routes/Index"><i class="glyphicon glyphicon-user"></i> Маршруты</a></li>
                                <li><a href="~/Services/Index"><i class="glyphicon glyphicon-flag"></i> Рейсы</a></li>
                            </ul>
                        </li>


                    </ul>

                    <hr>

                </div>
                <!-- /col-3 -->
                <div class="col-sm-9">

                    <!-- column 2 -->

                    <a href="#"><strong><i class="glyphicon glyphicon-dashboard"></i> Панель настроек</strong></a>
                    <hr>

                    <div class="row">

                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <div class="panel-title">
                                        <h4>@ViewBag.Title </h4>
                                    </div>
                                </div>
                                <div class="panel-body">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--/row-->

                    <hr>


                </div>
                <!--/col-span-9-->
            </div>
        </div>
        <!-- /Main -->

        
        <hr />
        <footer>
            <p>Mikhail-Soft &copy;@DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(function(){            $('.datepicker').datepicker({                inline: true,                nextText: '&rarr;',                prevText: '&larr;',                showOtherMonths: true,                dateFormat: 'dd MM yy ',                dayNamesMin: ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'],                changeMonth: true,                changeYear: true,                defaultDate:(+0),            });        });	
    
    </script>

</body>

</html>

