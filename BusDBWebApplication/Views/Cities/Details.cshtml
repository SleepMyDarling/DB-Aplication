@model BusDBWebApplication.DataBase.Cities

@{
    ViewBag.Title = "Подробнее о городе";
}



<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Название")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>


    </dl>
</div>
<hr/>
<div>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayName("Откуда")


        </th>
        <th>
            @Html.DisplayName("Куда")


        </th>
    </tr>

    @foreach (var item in Model.Froms)
    {
        <tr>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.FromWhence.title)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(modelItem => item.WhereAbouts.title)
            </td>
        </tr>
        
    }

</table>
    </div>
<hr />
<div>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayName("Откуда")


            </th>
            <th>
                @Html.DisplayName("Куда")


            </th>
        </tr>

        @foreach (var item in Model.Wheres)
        {
            <tr>
                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => item.FromWhence.title)
                </td>
                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => item.WhereAbouts.title)
                </td>
            </tr>

        }

    </table>
</div>
<p>
    @Html.ActionLink("Изменить", "Edit", new { id = Model.city_id }, new { @class = "btn btn-default" })
